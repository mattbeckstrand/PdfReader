{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist-electron",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "skipLibCheck": true
  },
  "include": ["electron/main.ts"],
  "exclude": ["node_modules", "dist", "src", "electron/preload.ts"]
}
